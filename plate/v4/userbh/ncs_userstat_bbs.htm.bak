<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=GBK">
<title>单位管理</title>
    <link rel="stylesheet" type="text/css" href="/newver/resources/css/ext-all.css" /> 
        <style type="text/css">

        .icon-grid {
            background-image:url(/newver/resources/themes/images/share/grid.png) !important;
        }
        .add {
            background-image:url(/newver/resources/themes/images/share/add.gif) !important;
        }
        .option {
            background-image:url(/newver/resources/themes/images/share/plugin.gif) !important;
        }
        .remove {
            background-image:url(/newver/resources/themes/images/share/delete.gif) !important;
        }
        .exp {
            background-image:url(/newver/resources/themes/images/share/application_go.png) !important;
        }
        .accept {
            background-image:url(/newver/resources/themes/images/share/accept.png) !important;
        }
    </style>
    
    
      
    <script type="text/javascript" src="/newver/resources/js/ext-all.js"></script>
    
  <script>  
    
Ext.Loader.setConfig({enabled: true});
Ext.Loader.setPath('Ext.ux', '/newver/ux/');
Ext.require([
    'Ext.grid.*',
    'Ext.data.*',
    'Ext.util.*',
    'Ext.toolbar.Paging',
    'Ext.ModelManager'
]);


  function showUrl(h1,did,uid,flag){
    	   var htmlvar='<iframe src="/pronline/Msg?FunName@ncsWebReplace&plate@v4/userbh/ncs_user_detbbs.htm&h1@'+h1+'&did@'+did+'&uid@'+uid+'&time_flag@'+flag+'" scrolling="no" name="moduleIframe" frameborder="no" style="width:100%;height:100%;"></iframe>';      

         var win = new Ext.Window ({
                             id:"addwindow",
                             title:"用户bbs发帖明细",
                             x:20,
                             y:20,
                             width:630,
                             height:450,
                             bodyPadding: 0,
                             modal:true,
                             resizable:true,
                             draggable:true,
                             html:htmlvar
                                               
         }
        )
        win.show();
    }
  var store;
  function reflash(){
  var keyword=document.getElementById('form1').keyword.value;
  var time_flag=document.getElementById("form1").time_flag.value;
  
  store.load({params: {time_flag:time_flag,keyword:keyword}});  
  }

    function pastime(){
  		parent.document.getElementById("form1").time_flag.value=document.getElementById("time_flag").value;
  	  document.getElementById("form1").time_flag.value=document.getElementById("time_flag").value;
  	

  	}
  	function gettime(){
  
  	var aa=parent.document.getElementById('form1').time_flag.value;

  	document.getElementById('time_flag').value=aa;
  	document.getElementById('form1').time_flag.value=aa;

  	} 



Ext.onReady(function(){
    Ext.data.Store.prototype.doSort = function() {
    reflash();
    }
    
    
   Ext.define('EimData', {
        extend: 'Ext.data.Model',
        fields: [
            'svalue','sname','did','uid','lcount'
        ]
  //      idProperty: 'sid'
    });
       store = Ext.create('Ext.data.Store', {
        pageSize: 40,
        model: 'EimData',
        remoteSort: true,
  //      autoLoad :{params:{aaad:0,dddd:2}},
        proxy: {
            type: 'ajax',
            url: '/pronline/Msg?FunName@ncsUserBbsStat_v4&did@[#did#]&uid@[#uid#]',
            reader: {
                type:'json',
                root: 'eimdata',
                totalProperty: 'totalCount'
            },         
            simpleSortMode: true

        },
//        params:{ffffff:'aaaaaa'},
        sorters: [{
            property: 'stime',
            direction: 'ASC'
        }]
    });
 reflash();

 
 

 //对翻页工具条重新构建，替换翻页函数    
  Ext.PagingToolbar1 = Ext.extend(Ext.PagingToolbar, {
     doRefresh:function(){
    
     reflash();
    },
    moveLast:function(){
    	var b=this,a=b.getPageData().pageCount;
    	if(b.fireEvent("beforechange",b,a)!==false){
    	store.currentPage=a;
    	reflash();
       }},
     moveFirst:function(){
      if(this.fireEvent("beforechange",this,1)!==false){
      store.currentPage=1;
      reflash();}}, 
     movePrevious:function(){var b=this,a=b.store.currentPage-1;if(a>0){if(b.fireEvent("beforechange",b,a)!==false){store.currentPage=a;reflash();}}},
     moveNext:function(){var c=this,b=c.getPageData().pageCount,a=c.store.currentPage+1;if(a<=b){if(c.fireEvent("beforechange",c,a)!==false){store.currentPage=a;reflash();}}}
       
});
 
 
 
 
 
    function gotoUrl(value,p,record){
        var temp_disp=record.data.host;
        return Ext.String.format( '<a href="#xxm" onclick=window.open("http://{0}")>{1}</a>',temp_disp,temp_disp);
      
    }
   
     function gotoDet(value,p,record){
        var temp_disp=record.data.svalue;
        var temp_did='[#did#]';
        var temp_uid='[#uid#]';
        var time_flag=document.getElementById("form1").time_flag.value;

       return Ext.String.format('<a href="#xxm" onclick=showUrl("{0}","{1}","{2}","{3}");>详细信息</a>',temp_disp,temp_did,temp_uid,time_flag);   
    }


  
        // create the Grid
    var grid = Ext.create('Ext.grid.Panel', {

//        width: aaa,
        height: 980,
        forceFit: true,
        scrollOffset: 0,
        store: store,
        frame:true,
       
        // grid columns
        columns:[{
            text: "论坛名称",
            dataIndex: 'svalue',
            hidden: false,
            width: 150,
     //       renderer: gotoUrl,
            sortable: false
        },{
            text: "论坛URL",
            dataIndex: 'sname',
            hidden: false,
            width: 100,
 //           renderer: gotoUrl,
            sortable: false
        },{
            text: "记录数",
            dataIndex: 'lcount', 
           width: 60,
 //           flex: 1,
            sortable: false
        },{
            text: "详细",
            dataIndex: 'dispname',  
            renderer: gotoDet,
            width: 60,
 //           flex: 1,
            sortable: false
 //           renderer: ipgj
        },
        {
          width:40,
           flex:1,
            sortable: false
        }      
        ],
        columnLines: true,
           tbar: Ext.create('Ext.PagingToolbar1', {
            store: store,
            
            displayInfo: true,
            displayMsg: '显示{0} - {1}条记录 共{2}条记录',
            emptyMsg: "没有记录可显示",
                                       
            items: [
 //          '->',
            '-',
           {
           xtype:'label',
            html:'&nbsp;<select name="time_flag" id="time_flag"  onchange="document.getElementById(\'form1\').time_flag.value=this.value;pastime();reflash()"><option value="4">最近一月</option><option value="1">今天</option><option value="2">最近三天</option><option value="3">最近一周</option><option value="5">最近三月</option><option value="6">最近半年</option></select>关键字包含'
           
            
             }
             ,
             {
               xtype:'textfield',
               id:'keyword',
               name:'keyword',
               style:'color:#7aa7d5',
               value:'请输入查询内容',
                enableKeyEvents:true,
               listeners:{
                 'focus':function(){
                 if(this.value=='请输入查询内容'){                
                    this.setValue('');
                  }
                 },
                                'keydown' : function(i,e){
                var aae=e.getKey() ; 
                if(aae==13){
                 var aa=Ext.getCmp('keyword').value;
                
                if(aa!='请输入查询内容'){
                  	document.getElementById("form1").keyword.value=aa;
                 }

                 store.currentPage=1;
                  reflash();
		                  
		                   reflash();
                }
               }
                 
                 
               }
             },
             {
                text:'确认',
                iconCls:'accept',
                handler: function(){
                 var aa=Ext.getCmp('keyword').value;
                
                if(aa!='请输入查询内容'){
                  	document.getElementById("form1").keyword.value=aa;
                 }

                 store.currentPage=1;
                  reflash();
              
                }
            },
           '-',{
                text:'导出',
                iconCls:'exp',
                handler:function(){
              document.getElementById('form1').export1.value='exp';
               document.getElementById("form1").submit();
             document.getElementById("form1").export1.value="";
              
                }
            }]
                  

        }),
                                        
      renderTo: 'grid-example'
        

    });

gettime();
});


</script>    
</head>
<body>
    <div id="grid-example"></div>
    
   <form name="form1" id="form1" action="/pronline/Msg">	
		<input type="hidden" name="FunName" value="ncsUserBbsStat_v4">
		<input type="hidden" name="export1" value="">
		<input type="hidden" name="keyword" value="">
		<input type="hidden" name="time_flag" value="4">
		
	</form>
	
</body>
</html>
